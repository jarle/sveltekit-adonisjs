{
  "name": "reference-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.2.3",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@fontsource/fira-mono": "^4.5.10",
    "@japa/assert": "^3.0.0",
    "@japa/file-system": "^2.3.0",
    "@japa/plugin-adonisjs": "^3.0.0",
    "@japa/runner": "^3.1.2",
    "@neoconfetti/svelte": "^1.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@swc/core": "^1.4.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.7",
    "eslint": "^8.57.0",
    "hot-hook": "^0.2.0",
    "polka": "1.0.0-next.25",
    "prettier": "^3.2.5",
    "sqlite3": "^5.1.7",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.4.1",
    "typescript": "5.4.5",
    "vite": "^5.2.8"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.0",
    "@adonisjs/core": "^6.7.0",
    "@adonisjs/http-server": "^7.1.0",
    "@adonisjs/lucid": "^20.4.0",
    "@adonisjs/session": "^7.1.1",
    "@adonisjs/shield": "^8.1.1",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^3.0.0-11",
    "@japa/api-client": "^2.0.2",
    "@japa/browser-client": "^2.0.2",
    "@matstack/sveltekit-adonisjs": "workspace:*",
    "@vinejs/vine": "^2.0.0",
    "edge.js": "^6.0.1",
    "isbot": "^4",
    "luxon": "^3.4.4",
    "pino-pretty": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config",
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middlewares/*.ts"
    ],
    "ignore": [
      "node_modules/**",
      "resources/svelte_app/**",
      "vite.config.ts.timestamp*"
    ]
  }
}
